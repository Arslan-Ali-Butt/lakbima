= form_for currency, html: { class: "form-horizontal" } do |f|
  = render "shared/errors", resource: currency
  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .hr-line-dashed
  .form-group
    = f.label :code, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :code, class: 'form-control'
  .hr-line-dashed
  .form-group
    = f.label :symbol, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :symbol, class: 'form-control'
  .hr-line-dashed
  .form-group
    = f.label :country, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :country, class: 'form-control'
  .form-group
    .col-sm-4.col-sm-offset-2
      = f.submit "Save", class: "btn btn-primary"
