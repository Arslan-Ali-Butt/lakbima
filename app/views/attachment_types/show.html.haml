.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h2= @attachment_type.name
        .ibox-content
          .col-md-2
            %p.font-bold Name
          .col-md-10
            %p= @attachment_type.name
          %br
          .col-md-2
            %p.font-bold Description
          .col-md-10
            %p= @attachment_type.description
          %br
          .clearfix
  .row
    .col-lg-12
      - if can? :edit, AttachmentType
        = link_to "Edit", edit_attachment_type_path(@attachment_type), class: "btn btn-primary btn-rounded"
      - if can? :index, AttachmentType
        = link_to "All Attachment Types", attachment_types_path, class: "btn btn-primary btn-rounded"
