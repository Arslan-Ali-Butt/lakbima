.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      = link_to new_attachment_type_path, class: "btn btn-primary btn-rounded m-sm pull-right" do
        %i.fa.fa-plus{"aria-hidden" => true}
        &nbsp;&nbsp; New Attachment Type
      .ibox.float-e-margins
        .ibox-title All Attachment Types
        .ibox-content
          .table-responsive
            %table.table.table-bordered.table-striped
              %thead
                %tr
                  %th #
                  %th Name
                  %th Description
                  %th Actions
              %tbody
                - @attachment_types.each do |attachment_type|
                  %tr{data: { id: attachment_type.id } }
                    %td= link_to attachment_type.id, attachment_type
                    %td= attachment_type.name
                    %td= attachment_type.description
                    %td
                      = link_to attachment_type, method: :delete, remote: true, data: { confirm: "Are you sure to delete this attachment type from database?" }, class: "action-link" do
                        %i.fa.fa-trash{"aria-hidden" => true}
                      = link_to edit_attachment_type_path(attachment_type), class: "action-link" do
                        %i.fa.fa-pencil{"aria-hidden" => true}
