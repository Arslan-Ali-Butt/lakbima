.passwordBox.animated.fadeInDown
  .row
    .col-md-12
      .ibox-content
        %h2.font-bold Forgot password
        %p Enter your email address, and you will be sent instructions on how to reset you password
        .row
          .col-lg-12
            = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: "form", class: "m-t" }) do |f|
              - if resource.errors.any?
                .alert.alert-danger.alert-dismissable
                  %button.close{"aria-hidden" => true, data: { dismiss: "alert" }, type: "button"}
                    Ã—
                  - resource.errors.full_messages.each do |msg|
                    %p= msg
              .form-group
                = f.email_field :email, class: "form-control", placeholder: "Email address", required: true, autofocus: true

              = f.submit "Send me reset password instructions", class: "btn btn-primary block full-width m-b"
            = render "devise/shared/links"
  %hr
