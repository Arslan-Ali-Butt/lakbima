.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h2=@dynamic_menu.name
        .ibox-content
          %br
          .col-md-2
            %p.font-bold Name
          .col-md-10
            %p= @dynamic_menu.name
          %br
          .col-md-2
            %p.font-bold Description
          .col-md-10
            %p= @dynamic_menu.description
          %br
          .col-md-2
            %p.fond-bold Account Lists(For)
          .col-md-10
            %p
              - @dynamic_menu.from_account_types.each do |account_type|
                %span.label.label-primary= account_type.try(:name)
          %br
          .col-md-2
            %p.fond-bold Account Lists(To)
          .col-md-10
            %p
              - @dynamic_menu.to_account_types.each do |account_type|
                %span.label.label-primary= account_type.try(:name)
          %br
          .clearfix
  .row
    .col-lg-12
      - if can? :edit, DynamicMenu
        = link_to "Edit", edit_dynamic_menu_path(@dynamic_menu), class: "btn btn-primary btn-rounded"
      - if can? :index, DynamicMenu
        = link_to "All Dynamic Menus", dynamic_menus_path, class: "btn btn-primary btn-rounded"
