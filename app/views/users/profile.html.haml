.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h5 Edit your profile
        .ibox-content
          = form_for @user, url: update_profile_path, html: { class: "form-horizontal" } do |f|
            = render "shared/errors", resource: @user
            .form-group
              = f.label :username, class: 'col-sm-2 control-label'
              .col-sm-10
                = f.text_field :username, class: 'form-control'
            .hr-line-dashed
            .form-group
              = f.label :password, class: 'col-sm-2 control-label'
              .col-sm-10
                = f.password_field :password, class: 'form-control'
            .hr-line-dashed
            .form-group
              .col-sm-2.col-sm-offset-2
                = f.submit "Save", class: "btn btn-primary"
                = link_to "Cancel", root_path, class: "btn btn-primary"
