.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      = render 'shared/flash_messages'
      .ibox.float-e-margins
        .ibox-title
          %h2=@vacation_type.name
        .ibox-content
          .col-md-2
            %p.font-bold Name
          .col-md-10
            %p= @vacation_type.name
          %br
          .col-md-2
            %p.font-bold Description
          .col-md-10
            %p= @vacation_type.description
          %br
          .clearfix
  .row
    .col-lg-12
      = link_to "Edit", edit_vacation_type_path(@vacation_type), class: "btn btn-primary btn-rounded"
      = link_to "All Vacation Types", vacation_types_path, class: "btn btn-primary btn-rounded"
