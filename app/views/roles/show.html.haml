.wrapper.wrapper-content.animated.fadeInRight
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          %h2=@role.name
        .ibox-content
          .row
            .col-md-2 
              %p.font-bold Description
            .col-md-10
              %p= @role.description
          .row
            .col-md-2
              %p.font-bold Permissions
            .col-md-10
              %p= render 'permissions', permissions: @role.permissions
          .clearfix
  .row
    .col-lg-12
      - if can? :edit, Role
        = link_to "Edit", edit_role_path(@role), class: "btn btn-primary btn-rounded"
      - if can? :index, Role
        = link_to "All Roles", roles_path, class: "btn btn-primary btn-rounded"

