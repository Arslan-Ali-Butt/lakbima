.modal.inmodal.fade#newJournalEntry{tabindex: "-1", role: "dialog", "aria-hidden" => "true"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{type: "button", dismiss: "modal"}
          %span{"aria-hidden" => "true"} &times;
          %span.sr-only Close
        %h4 Create a new Journal Entry
      .modal-body
        = form_for [journal_entry_session, journal_entry], html: { class: "form-horizontal", id: "journalEntryForm" } do |f|
          .form-group
            = f.label :happened_at, 'Happened At', class: 'control-label'
            .input-group.date.m-r-md
              %span.input-group-addon
                %i.fa.fa-calendar
              = f.text_field :happened_at, class: 'form-control input-group date', id: "journalEntryHappenedAt"
          .form-group
            = f.label :amount, class: 'control-label'
            = f.number_field :amount, class: 'form-control'
          .form-group
            = f.label :description, class: 'control-label'
            = f.text_area :description, class: 'form-control'
          .form-group
            = f.label :from_account_id, 'From Account', class: 'control-label'
            = f.select :from_account_id, options_for_select(Account.all.map { |a| [a.name, a.id] }, selected: journal_entry.from_account_id), { prompt: "Please choose form account." }, class: "form-control"
          .form-group
            = f.label :to_account_id, 'To Account', class: 'control-label'
            = f.select :to_account_id, options_for_select(Account.all.map { |a| [a.name, a.id] }, selected: journal_entry.to_account_id), { prompt: "Please choose to account." }, class: "form-control"
          .modal-footer.journal-entry-footer
            = link_to "Close", accounts_path, class: "btn btn-white", data: { dismiss: "modal" }
            = link_to "Save", "#", class: "btn btn-primary", id: "saveJournalEntry", data: { journal_entry_session_id: journal_entry_session.id, style: "zoom-in" }
